{{!-- Duration --}}
<div class="form-group split-group">
    <label>{{ localize "RESURGIRDRAGON.Duration" }}</label>
    <div class="form-fields">

        {{!-- Amount --}}
        {{#if duration.scalar}}
        {{ formField fields.value value=data.value label="RESURGIRDRAGON.Amount" localize=true hint=false placeholder="â€”"
                     classes="label-top" }}
        {{/if}}

        {{!-- Time --}}
        {{ formField fields.units value=data.units label="RESURGIRDRAGON.DurationTime" localize=true hint=false
                     options=durationUnits classes="label-top" }}
    </div>

    {{!-- Conditions --}}
    {{#if (eq source.duration.units "spec")}}
    {{ formInput fields.special value=data.special input=inputs.createTextInput classes="full-width"
                 placeholder=(localize "RESURGIRDRAGON.DURATION.FIELDS.duration.special.label") }}
    {{/if}}
</div>
