<fieldset>
    <legend>{{ localize "RESURGIRDRAGON.ItemClassDetails" }}</legend>

    {{!-- Identifier --}}
    <div class="form-group">
        <label>{{ localize "RESURGIRDRAGON.Identifier" }}</label>
        <div class="form-fields">
            {{ formInput fields.identifier value=source.identifier placeholder=item.identifier }}
        </div>
        <p class="hint">
            {{{ localize "RESURGIRDRAGON.ClassIdentifierHint" identifier=item.identifier }}}
            {{ localize "RESURGIRDRAGON.IdentifierError" }}
        </p>
    </div>

    {{!-- Hit Dice --}}
    <div class="form-group split-group">
        <label>{{ localize "RESURGIRDRAGON.CLASS.FIELDS.hitDice.label" }}</label>
        <div class="form-fields">

            {{!-- Denomination --}}
            {{ formField fields.hitDice value=source.hitDice options=hitDieTypes label="RESURGIRDRAGON.Denomination"
                         localize=true classes="label-top" }}

            {{!-- Spent --}}
            {{ formField fields.hitDiceUsed value=source.hitDiceUsed placeholder="0" localize=true label="RESURGIRDRAGON.Spent"
                         classes="label-top" }}
        </div>
    </div>
</fieldset>

<fieldset>
    <legend>{{ localize "RESURGIRDRAGON.CLASS.Multiclass.Title" }}</legend>

    {{!-- Primary Ability --}}
    {{ formField fields.primaryAbility.fields.value value=source.primaryAbility.value options=primaryAbilities }}

    {{!-- All Required --}}
    {{#if (gt source.primaryAbility.value.length 1)}}
    {{ formField fields.primaryAbility.fields.all value=source.primaryAbility.all input=inputs.createCheckboxInput }}
    {{/if}}
</fieldset>
