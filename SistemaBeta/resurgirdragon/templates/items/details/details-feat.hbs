<fieldset>
    <legend>{{ localize "RESURGIRDRAGON.ItemFeatureDetails" }}</legend>

    {{!-- Feature Type --}}
    {{ formField fields.type.fields.value value=source.type.value choices=config.featureTypes labelAttr="label" blank=""
                 localize=true }}

    {{!-- Feature Sub-Type --}}
    {{#if itemSubtypes}}
    {{ formField fields.type.fields.subtype value=source.type.subtype choices=itemSubtypes blank="" localize=true
                 label=(localize "RESURGIRDRAGON.ItemFeatureSubtype" category=(lookup (lookup config.featureTypes source.type.value) "label")) }}
    {{/if}}

    {{!-- Feature Prerequisites --}}
    {{ formField fields.prerequisites.fields.level value=source.prerequisites.level localize=true step=1
                 label="RESURGIRDRAGON.Prerequisites.FIELDS.prerequisites.level.label"
                 hint="RESURGIRDRAGON.Prerequisites.FIELDS.prerequisites.level.hint" }}

    {{!-- Feature Properties --}}
    {{ formField fields.properties options=properties.options label="RESURGIRDRAGON.ItemFeatureProperties" localize=true
                 input=inputs.createMultiCheckboxInput stacked=true classes="checkbox-grid checkbox-grid-3" }}
</fieldset>

{{#if system.isEnchantmentSource}}
<fieldset>
    <legend>{{ localize "RESURGIRDRAGON.ENCHANTMENT.Label" }}</legend>

    {{!-- Max Enchantments --}}
    {{ formField fields.enchant.fields.max value=source.enchant.max localize=true
                 label="RESURGIRDRAGON.ENCHANTMENT.FIELDS.enchantment.items.max.label"
                 hint="RESURGIRDRAGON.ENCHANTMENT.FIELDS.enchantment.items.max.hint" }}

    {{!-- Enchantment Replacement --}}
    {{ formField fields.enchant.fields.period value=source.enchant.period localize=true
                 choices=config.enchantmentPeriods labelAttr="label" blank="RESURGIRDRAGON.UsesPeriods.Never"
                 label="RESURGIRDRAGON.ENCHANTMENT.FIELDS.enchantment.items.period.label"
                 hint="RESURGIRDRAGON.ENCHANTMENT.FIELDS.enchantment.items.period.hint" }}
</fieldset>
{{/if}}
